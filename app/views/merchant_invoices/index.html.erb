<section class="invoices">
  <h3>Invoices:</h3>
  <% @invoices.each do |invoice| %>
    <div id="invoice-<%= invoice.id %>">
      <p><%= link_to invoice.id, merchant_invoice_path(@merchant, invoice), method: :get %></p>
    </div>
  <% end %>
</section>

<section class="brute_revenue">
  <p>Brute Revenue (before discounts): $<%= @invoices.brute_revenue %></p>
</section>

<section class="net_revenue">
  <p>Net Revenue (after discounts): $<%= @invoices.net_revenue %></p>
</section>