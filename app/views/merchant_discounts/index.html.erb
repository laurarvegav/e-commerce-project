<section class="all-discounts">
  <% @discounts.each do |discount| %>
    <div id="discount-<%= discount.id %>">
      <%= link_to "#{discount.id}", merchant_discount_path(@merchant, discount) %>
      <%= discount.percent_discount %>
      <%= discount.quantity_threshold %>
      <%= button_to "Delete", merchant_discount_path(@merchant, discount), method: :delete %>
    </div>
  <% end %>
</section>
<%= link_to "Create a New Discount", new_merchant_discount_path(@merchant) %>
